@model List<eera_model.Hostel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!--== breadcrumbs ==-->
<div class="sb2-2-2">
    <ul>
        <li>
            <a href="~/Admin/Index"><i class="fa fa-home" aria-hidden="true"></i> Home</a>
        </li>
        <li class="active-bre">
            <a href="#"> @ViewBag.CurrentPageLocation</a>
        </li>
        <li class="page-back">
            <a href="~/Hostel/NewHostel"><i class="fa fa-plus" aria-hidden="true"></i> New Hostel</a>
        </li>
    </ul>
</div>
<!--== DASHBOARD INFO ==-->
<div class="col-md-12">
    <div class="box-inn-sp">
        <div class="inn-title">
            <h4>Total Hostels @ViewBag.TotalRecords</h4>
        </div>
        <div class="tab-inn">
            <div class="table-responsive table-desi">
                @{
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Select</th>
                                <th>Title</th>
                                <th>Category</th>
                                <th>ContactNo</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var Hostel in Model)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" class="filled-in" id="filled-in-box-1" checked="checked">
                                        <label for="filled-in-box-1"></label>
                                    </td>
                                    <td>@Hostel.Title</td>
                                    <td>@Hostel.Category</td>
                                    <td>@Hostel.ContactNumber</td>
                                    <td>
                                        @if (Hostel.Status)
                                        {
                                            <span class="label label-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="label label-danger">Inactive</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }

            </div>
        </div>
    </div>
</div>
