@model eera_model.UserEnquiry
@{
    ViewBag.Title = "Enquiry";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}

<section class="c-all h-quote">
    @using (Html.BeginForm("PostEnquiry", "Home", FormMethod.Post))
    {

        <div class="container">
            <div class="col-md-6 col-sm-12 col-xs-12">
                <div class="all-title quote-title qu-new">
                    <h2>Enquiry</h2>
                    <p>
                        Post your queries to know more about our services
                    </p>

                    <p class="help-line">Reach out us at <span>+40 XXXXXXXXXX</span> </p> <span class="help-arrow pulse"><i class="fa fa-angle-right" aria-hidden="true"></i></span>
                </div>
            </div>
            <div class="col-md-6 col-sm-12 col-xs-12">
                <div class="n-form-com admiss-form">
                    <div class="col s12">
                        <form class="form-horizontal">

                            <div class="form-group">
                                <label class="control-label col-sm-3">UserCode:</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.UserAuthenticationCode, new { id = "txtUserAuthenticationCode", @class = "validate", placeholder = "UserCode" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-sm-3">UserName:</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.UserName, new { id = "txtUserName", @class = "validate", placeholder = "UserName" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-3">PhoneNumber:</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.PhoneNumber, new { id = "txtPhoneNumber", @class = "validate", placeholder = "PhoneNumber" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-3">Email Id:</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.Email, new { id = "txtEmail", @class = "validate", placeholder = "Email Id" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-3">Option:</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.Option, new { id = "txtOption", @class = "validate", placeholder = "Option" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label col-sm-3">Description:</label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.Description, new { id = "txtDescription", @class = "validate", placeholder = "Description" })
                                </div>
                            </div>
                            <div class="form-group mar-bot-0">
                                <div class="col-sm-offset-3 col-sm-9">
                                    <i class="waves-effect waves-light light-btn waves-input-wrapper" style=""><input type="submit" value="APPLY NOW" class="waves-button-input"></i>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
    </section>
